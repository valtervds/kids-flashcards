rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Caminho oficial de áudios de decks
    match /deck-audio/{deckId}/{fileName} {
      // Leituras públicas por enquanto (áudio educativo não sensível)
      allow read: if true;
      // Upload/alterar apenas usuário autenticado
      allow write: if request.auth != null;
    }

    // DESCOMENTE bloco abaixo apenas se precisar destravar debug urgente (abre tudo!)
    // match /{allPaths=**} { allow read, write: if true; }
  }
}
